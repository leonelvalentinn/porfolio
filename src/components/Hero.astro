---
const personalImageAlt = "Leonel Valentín";
import Badge from "@/components/Badge.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import SocialPill from "@/components/SocialPill.astro";
import WhatsApp from "./icons/WhatsApp.astro";
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16 object-cover object-top"
      src="/leonel.jpeg"
      alt={personalImageAlt}
    />
    <a
      href="https://api.whatsapp.com/send?phone=52555514476309"
      target="_blank"
      rel="noopener noreferrer"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Leonel Valentín
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    <strong>Desarrollador web FrontEnd</strong> de CDMX. Especializado en crear aplicaciones
    web atractivas y funcionales, utilizando tecnologías modernas.
    <nav class="flex flex-wrap gap-4 mt-8">
      <SocialPill href="https://api.whatsapp.com/send?phone=52555514476309">
        <WhatsApp class="size-4" />
        Contáctame
      </SocialPill>
      <SocialPill
        href="https://www.linkedin.com/in/leonel-valentín-acosta-774050222/"
      >
        <LinkedInIcon class="size-4" />
        LinkedIn
      </SocialPill>
    </nav>
  </p>
</div>
